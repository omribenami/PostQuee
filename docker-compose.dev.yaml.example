services:
  # ==========================================
  # 1. POSTIZ APP (Development)
  # ==========================================
  postiz-app-dev:
    container_name: postiz-app-dev
    build:
      context: .
      dockerfile: Dockerfile.dev
    image: localhost/postiz-app-dev:latest
    restart: unless-stopped
    ports:
      - "4201:4200"
      - "5001:5000"
      - "3001:3000"
    env_file:
      - ./.env
    environment:
      # ==========================================
      # DEVELOPMENT-SPECIFIC VARIABLES
      # ==========================================
      # Database - Local PostgreSQL
      DATABASE_URL: "postgresql://postiz-user:postiz-password@postiz-postgres-dev:5432/postiz-db-dev"

      # Redis - Development instance
      REDIS_URL: "redis://postiz-redis-dev:6379"

      # URLs - Development domain
      MAIN_URL: "https://dev.yourdomain.com"
      FRONTEND_URL: "https://dev.yourdomain.com"
      NEXT_PUBLIC_BACKEND_URL: "https://dev.yourdomain.com/api"
      BACKEND_INTERNAL_URL: "http://localhost:3000"

      # Security - Development JWT secret (generate a secure random string)
      JWT_SECRET: "your-development-jwt-secret-here"

      # Cookies - Development cookie name
      COOKIE_NAME: "auth-dev"
      NEXT_PUBLIC_COOKIE_NAME: "auth-dev"

      # Postgres credentials for local database
      POSTGRES_USER: "postiz-user"
      POSTGRES_PASSWORD: "postiz-password"
      POSTGRES_DB: "postiz-db-dev"

    depends_on:
      postiz-postgres-dev:
        condition: service_healthy
      postiz-redis-dev:
        condition: service_healthy
    networks:
      - postiz-network-dev
    volumes:
      - ./:/app
      - ./.env:/app/.env:ro
      - ./uploads:/app/uploads

  # ==========================================
  # 2. DATABASE (Development - Local PostgreSQL)
  # ==========================================
  postiz-postgres-dev:
    image: postgres:17-alpine
    container_name: postiz-postgres-dev
    restart: unless-stopped
    environment:
      POSTGRES_USER: postiz-user
      POSTGRES_PASSWORD: postiz-password
      POSTGRES_DB: postiz-db-dev
    volumes:
      - postiz_postgres_data_dev:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postiz-user -d postiz-db-dev"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - postiz-network-dev

  # ==========================================
  # 3. REDIS (Development)
  # ==========================================
  postiz-redis-dev:
    image: redis:7.2-alpine
    container_name: postiz-redis-dev
    restart: unless-stopped
    volumes:
      - postiz_redis_data_dev:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - postiz-network-dev

networks:
  postiz-network-dev:
    driver: bridge

volumes:
  postiz_postgres_data_dev:
  postiz_redis_data_dev:
